/* iOS Style Qt Application Stylesheet */

QWidget {
    background-color: #f2f2f7;
    color: #1d1d1f;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 16px;
}

QLabel {
    background-color: transparent;
    border: none;
    color: #1d1d1f;
    font-weight: 400;
}

QLabel#titleLabel {
    font-size: 28px;
    font-weight: 700;
    color: #1d1d1f;
    margin: 20px 0px;
}

QLabel#subtitleLabel {
    font-size: 17px;
    font-weight: 400;
    color: #86868b;
    margin: 10px 0px;
}

/* Default button style */
QPushButton {
    background-color: #007aff;
    border: none;
    border-radius: 12px;
    color: white;
    font-size: 17px;
    font-weight: 600;
    padding: 16px 24px;
    margin: 8px;
    min-width: 140px;
    min-height: 50px;
}

QPushButton:hover {
    background-color: #0056cc;
}

QPushButton:pressed {
    background-color: #004499;
    transform: scale(0.98);
}

QPushButton:disabled {
    background-color: #f2f2f7;
    color: #8e8e93;
}

/* Primary buttons (Tab 1) */
QPushButton#pushButton1_1, QPushButton#pushButton1_2, QPushButton#pushButton1_3 {
    background-color: #007aff;
    border: none;
    border-radius: 12px;
    color: white;
    font-size: 17px;
    font-weight: 600;
    padding: 16px 24px;
    margin: 8px;
    min-width: 140px;
    min-height: 50px;
}

QPushButton#pushButton1_1:hover, QPushButton#pushButton1_2:hover, QPushButton#pushButton1_3:hover {
    background-color: #0056cc;
}

QPushButton#pushButton1_1:pressed, QPushButton#pushButton1_2:pressed, QPushButton#pushButton1_3:pressed {
    background-color: #004499;
    transform: scale(0.98);
}

/* Secondary buttons (Tab 2) */
QPushButton#pushButton2_1, QPushButton#pushButton2_2, QPushButton#pushButton2_3 {
    background-color: #f2f2f7;
    color: #007aff;
    border: 1px solid #d1d1d6;
    border-radius: 12px;
    font-size: 17px;
    font-weight: 600;
    padding: 16px 24px;
    margin: 8px;
    min-width: 140px;
    min-height: 50px;
}

QPushButton#pushButton2_1:hover, QPushButton#pushButton2_2:hover, QPushButton#pushButton2_3:hover {
    background-color: #e5e5ea;
}

QPushButton#pushButton2_1:pressed, QPushButton#pushButton2_2:pressed, QPushButton#pushButton2_3:pressed {
    background-color: #d1d1d6;
    transform: scale(0.98);
}

/* Destructive buttons (Tab 3) */
QPushButton#pushButton3_1, QPushButton#pushButton3_2, QPushButton#pushButton3_3 {
    background-color: #ff3b30;
    border: none;
    border-radius: 12px;
    color: white;
    font-size: 17px;
    font-weight: 600;
    padding: 16px 24px;
    margin: 8px;
    min-width: 140px;
    min-height: 50px;
}

QPushButton#pushButton3_1:hover, QPushButton#pushButton3_2:hover, QPushButton#pushButton3_3:hover {
    background-color: #d70015;
}

QPushButton#pushButton3_1:pressed, QPushButton#pushButton3_2:pressed, QPushButton#pushButton3_3:pressed {
    background-color: #b30000;
    transform: scale(0.98);
}

QFrame#headerCard {
    background-color: white;
    border-radius: 16px;
    border: 1px solid #e5e5ea;
    margin: 16px;
    padding: 24px;
}

QFrame#card1, QFrame#card2, QFrame#card3, QFrame#card7,
QFrame#card_digital, QFrame#card_analogue {
    background-color: white;
    border-radius: 16px;
    border: 1px solid #e5e5ea;
    margin: 16px;
    padding: 20px;
}

/* iOS Style Form Elements */
QFrame#ios_row_input, QFrame#ios_row_function, QFrame#ios_row_polarity,
QFrame#ios_row_action, QFrame#ios_row_arming, QFrame#ios_row_lcd, QFrame#ios_row_delay {
    background-color: white;
    border: none;
    min-height: 44px;
}

QFrame#ios_row_input:hover, QFrame#ios_row_function:hover, QFrame#ios_row_polarity:hover,
QFrame#ios_row_action:hover, QFrame#ios_row_arming:hover, QFrame#ios_row_lcd:hover, QFrame#ios_row_delay:hover {
    background-color: #f2f2f7;
}

QFrame#ios_separator1, QFrame#ios_separator2, QFrame#ios_separator3,
QFrame#ios_separator4, QFrame#ios_separator5, QFrame#ios_separator6 {
    background-color: #e5e5ea;
    border: none;
    max-height: 1px;
    margin: 0px 16px;
}

/* iOS Style ComboBox */
QComboBox {
    background-color: transparent;
    border: none;
    border-radius: 0px;
    padding: 0px;
    font-size: 17px;
    color: #007aff;
    min-height: 44px;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: none;
    border: none;
    width: 0px;
    height: 0px;
}

QComboBox::down-arrow:after {
    content: ">";
    color: #007aff;
    font-size: 16px;
    font-weight: bold;
}

QComboBox QAbstractItemView {
    background-color: white;
    border: 1px solid #e5e5ea;
    border-radius: 8px;
    selection-background-color: #f2f2f7;
    outline: none;
}

QComboBox QAbstractItemView::item {
    padding: 12px 16px;
    border: none;
    color: #f2f2f7;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #f2f2f7;
    color: #007aff;
}

QTabWidget::pane {
    border: none;
    background-color: #f2f2f7;
}

QTabWidget::tab-bar {
    alignment: center;
}

QTabBar::tab {
    background-color: white;
    color: #86868b;
    border: none;
    border-radius: 8px 8px 0px 0px;
    padding: 12px 20px;
    margin: 0px 2px;
    font-size: 15px;
    font-weight: 500;
    min-width: 80px;
}

QTabBar::tab:selected {
    background-color: #f2f2f7;
    color: #007aff;
    font-weight: 600;
}

QTabBar::tab:hover:!selected {
    background-color: #e5e5ea;
    color: #1d1d1f;
}

QTabWidget::tab-content {
    background-color: #f2f2f7;
    border: none;
}

/* Message Box Styles */
QMessageBox {
    background-color: #f2f2f7;
    color: #1d1d1f;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

QMessageBox QPushButton {
    background-color: #007aff;
    border: none;
    border-radius: 8px;
    color: white;
    font-weight: 600;
    padding: 12px 20px;
    min-width: 80px;
}

QMessageBox QPushButton:hover {
    background-color: #0056cc;
}

QMessageBox QPushButton[text="No"] {
    background-color: #f2f2f7;
    border: 1px solid #d1d1d6;
    color: #007aff;
}

QMessageBox QPushButton[text="No"]:hover {
    background-color: #e5e5ea;
}

/* Notification Styles */
QWidget#notification {
    background-color: rgba(0, 0, 0, 0.9);
    border-radius: 16px;
    color: white;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 16px;
    font-weight: 500;
    padding: 20px;
    margin: 8px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}
